{{#if err}}
<div class="err form">
    <form action="/login" method="POST">
        <h1>Login</h1>
        <span class="err-color">{{err}}</span>

        <label for="username-input"></label>
        <input type="text" id="username-input" name="username" placeholder="password">

        <label for="password-input"></label>
        <input type="password" id="password-input" name="password" placeholder="**********">
        <button type="submit">Sign in</button>

        <p>
            Don't have an account?
            <a href="/signup">Sign up</a>
        </p>
    </form>
</div>
{{else}}
<div class="login form">
    <form action="/login" method="POST">
        <h1>Login</h1>
        {{#if message}}
        <span class="err-color">{{message}}</span>
        {{/if}}
        <label for="username-input"></label>
        <input type="text" id="username-input" name="username" placeholder="password">

        <label for="password-input"></label>
        <input type="password" id="password-input" name="password" placeholder="**********">
        <button type="submit">Sign in</button>

        <p>
            Don't have an account?
            <a href="/signup">Sign up</a>
        </p>
    </form>
</div>
{{/if}}